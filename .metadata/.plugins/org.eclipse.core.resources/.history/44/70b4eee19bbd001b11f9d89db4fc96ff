package com.example.hello.controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class HelloController {
	
	@GetMapping("/hello")
	public String BrunoOtario() {
		return "<p style='color: blue'><center><h1>Hello World Turma 23!</h1></center></p>";
	}
	
	@GetMapping("/habilidades")
	public String DaniloBomNoVava(){
		return "Habilidade: Persitência, <br> Mentalidade: Atenção aos detalhes";
		
	}
	
	@GetMapping("/objetivo")
	public String objetivo(){
		return "Tenho por objetivo aprender o maximo possivel";
		
	}	
}
